<Window x:Class="SolarPositionCalculator.Views.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Chart" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Format Selection -->
        <GroupBox Grid.Row="0" Header="Export Format" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <RadioButton x:Name="PngRadioButton" Content="PNG" IsChecked="True" Margin="0,0,20,0"/>
                <RadioButton x:Name="SvgRadioButton" Content="SVG" Margin="0,0,20,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Image Dimensions -->
        <GroupBox Grid.Row="1" Header="Image Dimensions" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Width:" VerticalAlignment="Center"/>
                <TextBox x:Name="WidthTextBox" Grid.Row="0" Grid.Column="1" Text="800" Margin="5,0,10,0" VerticalAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="2" Content="Height:" VerticalAlignment="Center"/>
                <TextBox x:Name="HeightTextBox" Grid.Row="0" Grid.Column="3" Text="600" Margin="5,0,0,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Standard (800x600)" Click="SetStandardSize_Click" Margin="0,0,10,0"/>
                    <Button Content="Large (1200x900)" Click="SetLargeSize_Click" Margin="0,0,10,0"/>
                    <Button Content="HD (1920x1080)" Click="SetHDSize_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- PNG Quality Settings -->
        <GroupBox x:Name="PngQualityGroup" Grid.Row="2" Header="PNG Quality Settings" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Resolution (DPI):" VerticalAlignment="Center"/>
                <TextBox x:Name="ResolutionTextBox" Grid.Column="1" Text="96" Margin="5,0,10,0" VerticalAlignment="Center"/>
                <Label Grid.Column="2" Content="Quality (1-100):" VerticalAlignment="Center"/>
                <TextBox x:Name="QualityTextBox" Grid.Column="3" Text="90" Margin="5,0,0,0" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- Chart Options -->
        <GroupBox Grid.Row="3" Header="Chart Options" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <CheckBox x:Name="IncludeTitleCheckBox" Content="Include chart title" IsChecked="True" Margin="0,0,0,5"/>
                <CheckBox x:Name="IncludeLegendCheckBox" Content="Include legend" IsChecked="True"/>
            </StackPanel>
        </GroupBox>

        <!-- Background Color -->
        <GroupBox Grid.Row="4" Header="Background" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <RadioButton x:Name="WhiteBackgroundRadio" Content="White" IsChecked="True" Margin="0,0,15,0"/>
                <RadioButton x:Name="TransparentBackgroundRadio" Content="Transparent" Margin="0,0,15,0"/>
                <RadioButton x:Name="CustomBackgroundRadio" Content="Custom:" Margin="0,0,10,0"/>
                <TextBox x:Name="CustomBackgroundTextBox" Text="#FFFFFF" Width="80" IsEnabled="False"/>
            </StackPanel>
        </GroupBox>

        <!-- File Path -->
        <GroupBox Grid.Row="5" Header="Output File" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FilePathTextBox" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <Button x:Name="BrowseButton" Grid.Column="1" Content="Browse..." Click="Browse_Click" Width="80"/>
            </Grid>
        </GroupBox>

        <!-- Preview Area -->
        <GroupBox Grid.Row="6" Header="Preview" Margin="0,0,0,10">
            <TextBlock x:Name="PreviewTextBlock" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top"
                       Text="Select export options above to see preview information."/>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Export" Click="Export_Click" Width="80" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>