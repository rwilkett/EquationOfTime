<Window x:Class="SolarPositionCalculator.Views.ExportProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:SolarPositionCalculator.Converters"
        mc:Ignorable="d"
        Title="Export Progress"
        Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    
    <Window.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="{Binding Title}" 
                   FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Current Operation -->
        <TextBlock Grid.Row="1" Text="{Binding CurrentOperation}" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="2" Height="20" 
                    Value="{Binding ProgressPercentage}" 
                    Maximum="100" Margin="0,0,0,10"/>

        <!-- Progress Text -->
        <TextBlock Grid.Row="3" 
                   Text="{Binding ProgressText}" 
                   HorizontalAlignment="Center" 
                   FontFamily="Consolas" Margin="0,0,0,10"/>

        <!-- Time Information -->
        <StackPanel Grid.Row="4" Orientation="Vertical" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding ElapsedTime, StringFormat='Elapsed: {0:mm\\:ss}'}" 
                      HorizontalAlignment="Center" FontSize="11" Margin="0,2"/>
            <TextBlock Text="{Binding EstimatedTimeRemaining, StringFormat='Remaining: {0:mm\\:ss}'}" 
                      HorizontalAlignment="Center" FontSize="11" Margin="0,2"
                      Visibility="{Binding EstimatedTimeRemaining, Converter={StaticResource NullToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Cancel Button -->
        <Button Grid.Row="5" Content="Cancel" 
               Width="80" HorizontalAlignment="Center" 
               Command="{Binding CancelCommand}"
               IsEnabled="{Binding CanCancel}"/>
    </Grid>
</Window>