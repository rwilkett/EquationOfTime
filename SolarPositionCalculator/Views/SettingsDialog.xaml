<Window x:Class="SolarPositionCalculator.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application Settings" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Default Location Settings -->
                <GroupBox Header="Default Location">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Latitude:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Name="LatitudeTextBox"
                                 ToolTip="Default latitude for calculations (-90 to +90 degrees)"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Longitude:"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Name="LongitudeTextBox"
                                 ToolTip="Default longitude for calculations (-180 to +180 degrees)"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="Coordinate Format:"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" 
                                  Name="CoordinateFormatComboBox"
                                  ToolTip="Format for displaying coordinates">
                            <ComboBoxItem Content="Decimal Degrees" Tag="DecimalDegrees"/>
                            <ComboBoxItem Content="Degrees Minutes Seconds" Tag="DegreesMinutesSeconds"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>

                <!-- Application Behavior -->
                <GroupBox Header="Application Behavior">
                    <StackPanel>
                        <CheckBox Name="StartInRealTimeModeCheckBox" 
                                  Content="Start in real-time mode by default"
                                  ToolTip="Automatically enable real-time tracking when the application starts"/>
                        
                        <CheckBox Name="ShowTooltipsCheckBox" 
                                  Content="Show tooltips and help text"
                                  ToolTip="Display helpful tooltips throughout the application"/>
                    </StackPanel>
                </GroupBox>

                <!-- Export Settings -->
                <GroupBox Header="Export Settings">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Default Export Directory:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Name="DefaultExportDirectoryTextBox"
                                 IsReadOnly="True"
                                 ToolTip="Default directory for exporting charts and data"/>
                        <Button Grid.Row="0" Grid.Column="2" 
                                Content="Browse..." 
                                Name="BrowseExportDirectoryButton"
                                Click="BrowseExportDirectory_Click"
                                Margin="5,0,0,0"
                                Padding="10,2"/>
                    </Grid>
                </GroupBox>

                <!-- Accessibility -->
                <GroupBox Header="Accessibility">
                    <StackPanel>
                        <CheckBox Name="UseHighContrastModeCheckBox" 
                                  Content="Use high contrast mode"
                                  ToolTip="Enable high contrast colors for better visibility"/>
                    </StackPanel>
                </GroupBox>

                <!-- Window Settings -->
                <GroupBox Header="Window Settings">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Width:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Name="WindowWidthTextBox"
                                 ToolTip="Default window width in pixels"/>

                        <Label Grid.Row="0" Grid.Column="2" Content="Height:" Margin="10,0,0,0"/>
                        <TextBox Grid.Row="0" Grid.Column="3" 
                                 Name="WindowHeightTextBox"
                                 ToolTip="Default window height in pixels"/>

                        <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                                  Name="StartMaximizedCheckBox" 
                                  Content="Start maximized"
                                  ToolTip="Start the application with a maximized window"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="Reset to Defaults" 
                    Name="ResetButton"
                    Click="Reset_Click"
                    Margin="0,0,10,0"
                    Padding="15,5"
                    ToolTip="Reset all settings to their default values"/>
            <Button Content="OK" 
                    Name="OkButton"
                    Click="Ok_Click"
                    IsDefault="True"
                    Margin="0,0,10,0"
                    Padding="15,5"/>
            <Button Content="Cancel" 
                    Name="CancelButton"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>