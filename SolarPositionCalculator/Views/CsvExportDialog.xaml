<Window x:Class="SolarPositionCalculator.Views.CsvExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:SolarPositionCalculator.Converters"
        mc:Ignorable="d"
        Title="Export Solar Position Data to CSV"
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                
                <!-- Location Settings -->
                <GroupBox Header="Location">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Latitude:"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding Location.Latitude, StringFormat=F6, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Label Grid.Row="0" Grid.Column="2" Content="Longitude:"/>
                        <TextBox Grid.Row="0" Grid.Column="3" 
                                 Text="{Binding Location.Longitude, StringFormat=F6, UpdateSourceTrigger=PropertyChanged}"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" 
                                   Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="Current Location" Command="{Binding SetCurrentLocationCommand}" 
                                    CommandParameter="{Binding Location}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Date Range Settings -->
                <GroupBox Header="Date Range">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Start Date:"/>
                        <DatePicker Grid.Row="0" Grid.Column="1" 
                                   SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Label Grid.Row="0" Grid.Column="2" Content="End Date:"/>
                        <DatePicker Grid.Row="0" Grid.Column="3" 
                                   SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Interval:"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                                 ItemsSource="{Binding AvailableIntervals}"
                                 SelectedValue="{Binding Interval}"
                                 SelectedValuePath="Value"
                                 DisplayMemberPath="DisplayName"/>

                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" 
                                   Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="Today" Command="{Binding SetDateRangeToTodayCommand}"/>
                            <Button Content="Week" Command="{Binding SetDateRangeToWeekCommand}"/>
                            <Button Content="Month" Command="{Binding SetDateRangeToMonthCommand}"/>
                            <Button Content="Year" Command="{Binding SetDateRangeToYearCommand}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" 
                                  Text="{Binding EstimatedDataPoints, StringFormat='Estimated data points: {0:N0}'}"
                                  HorizontalAlignment="Center" Margin="0,5,0,0"
                                  FontStyle="Italic" Foreground="Gray"/>
                    </Grid>
                </GroupBox>

                <!-- Output Settings -->
                <GroupBox Header="Output File">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{Binding OutputFilePath, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseOutputFileCommand}"/>
                    </Grid>
                </GroupBox>

                <!-- CSV Format Options -->
                <GroupBox Header="CSV Format Options">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Row="0" Grid.Column="0" Content="Include Headers" 
                                 IsChecked="{Binding IncludeHeaders}"/>
                        <CheckBox Grid.Row="0" Grid.Column="1" Content="Include Metadata Comments" 
                                 IsChecked="{Binding IncludeMetadataComments}"/>

                        <CheckBox Grid.Row="1" Grid.Column="0" Content="Include Location in Rows" 
                                 IsChecked="{Binding IncludeLocationInRows}"/>
                        <CheckBox Grid.Row="1" Grid.Column="1" Content="Include Sun Visibility" 
                                 IsChecked="{Binding IncludeSunVisibility}"/>

                        <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Include Equation of Time" 
                                 IsChecked="{Binding IncludeEquationOfTime}"/>

                        <Label Grid.Row="3" Grid.Column="0" Content="Delimiter:"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" 
                                 ItemsSource="{Binding AvailableDelimiters}"
                                 SelectedItem="{Binding Delimiter}"/>

                        <Label Grid.Row="4" Grid.Column="0" Content="Date/Time Format:"/>
                        <ComboBox Grid.Row="4" Grid.Column="1" 
                                 ItemsSource="{Binding AvailableDateTimeFormats}"
                                 SelectedItem="{Binding DateTimeFormat}"
                                 IsEditable="True"/>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" Height="20" Margin="10,5"
                    Value="{Binding ExportProgress}"
                    Visibility="{Binding IsExporting, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Status and Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10,5">
                <TextBlock Text="{Binding ExportStatus}" FontWeight="Bold"/>
                <TextBlock Text="{Binding EstimatedTimeRemaining, StringFormat='Estimated time remaining: {0:mm\\:ss}'}"
                          Visibility="{Binding EstimatedTimeRemaining, Converter={StaticResource NullToVisibilityConverter}}"
                          FontStyle="Italic" Foreground="Gray"/>
            </StackPanel>

            <Button Grid.Column="1" Content="Export" 
                   Command="{Binding ExportCommand}"
                   IsDefault="True"/>
            <Button Grid.Column="2" Content="Cancel" 
                   IsCancel="True"/>
        </Grid>
    </Grid>
</Window>