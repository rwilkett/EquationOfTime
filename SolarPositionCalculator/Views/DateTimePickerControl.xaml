<UserControl x:Class="SolarPositionCalculator.Views.DateTimePickerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignHeight="200" d:DesignWidth="300">

    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10">
        <StackPanel>
            <TextBlock Text="Date and Time" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />

            <!-- Date Picker -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Date:" VerticalAlignment="Center" />
                <DatePicker Grid.Column="1"
                    SelectedDate="{Binding SelectedDateTime, UpdateSourceTrigger=PropertyChanged}"
                    Margin="5,0" />
            </Grid>

            <!-- Time Picker -->
            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Time:" VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5,0">
                    <ComboBox x:Name="HourComboBoxControl" Width="50" Margin="0,0,5,0">
                        <!-- Hours 0-23 will be populated in code-behind -->
                    </ComboBox>
                    <TextBlock Text=":" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <ComboBox x:Name="MinuteComboBoxControl" Width="50">
                        <!-- Minutes 0-59 will be populated in code-behind -->
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Real-time Toggle -->
            <CheckBox Content="Real-time mode"
                IsChecked="{Binding IsRealTimeMode}"
                Command="{Binding ToggleRealTimeModeCommand}"
                Margin="0,8,0,8"
                ToolTip="Automatically update calculations with current time" />

            <!-- Current Time Button -->
            <Button Content="Set Current Time"
                Command="{Binding SetCurrentDateTimeCommand}"
                Margin="0,0,0,8"
                Padding="5,3" />

            <!-- Time Zone Information -->
            <StackPanel Margin="0,8,0,0">
                <TextBlock Text="Time Zone Information" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5" />
                <TextBlock Text="{Binding CurrentTimeZone.DisplayName}"
                    FontSize="11"
                    Foreground="DarkBlue"
                    TextWrapping="Wrap" />
                <Grid Margin="0,3,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding SelectedDateTime, StringFormat='Local: {0:HH:mm}'}"
                        FontSize="11" />
                    <TextBlock Grid.Column="1" Text="{Binding UtcTime, StringFormat='UTC: {0:HH:mm}'}" FontSize="11" />
                </Grid>

                <!-- Real-time Current Time Display -->
                <Border Margin="0,5,0,0"
                    BorderBrush="LightBlue"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="5"
                    Visibility="{Binding IsRealTimeMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Current Real-time" FontWeight="SemiBold" FontSize="11" Foreground="DarkBlue"
                            Margin="0,0,0,3" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding FormattedCurrentLocalTime}" FontSize="10"
                                FontFamily="Consolas" />
                            <TextBlock Grid.Column="1" Text="{Binding FormattedCurrentUtcTime}" FontSize="10"
                                FontFamily="Consolas" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>